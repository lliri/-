if var == "иследовать мир":
    print("вы наткнулись на город,хотите войти?")
    var = input()
elif var == "стоять на месте":
    print("вы встретили дикого кабана и он напугал вас из-за чего вы убежали")
    print("вы,пока убегали от кабана, наткнулись на город,хотите войти?")
    var = input()


if var == "да":
    print("вы увидели много людей которые к чему-то готовятся")
    print("Решаетесь ли вы спросить что")
    var = input()
    if var == "нет":
        print("вы ... стоите")
        print("хотите... стоять?")
        var = input()
